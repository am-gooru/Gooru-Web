<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:panel="urn:import:org.ednovo.gooru.client.uc"
	xmlns:s="urn:import:org.ednovo.gooru.client.mvp.search" xmlns:dnd="urn:import:org.ednovo.gooru.client.mvp.dnd">
	<ui:with field="i18n" type="org.ednovo.gooru.shared.i18n.MessageProperties" />
	<g:HTMLPanel>
		<g:HTMLPanel styleName="fixedPosition">
			<div class="subNavigation">
				<g:HTMLPanel styleName="container">
					<g:HTMLPanel styleName="no-gutter">
						<g:HTMLPanel styleName="col-md-6 col-sm-5">
							<g:HTMLPanel styleName="seachLeftNavigation">
								<panel:UlPanel>
									<panel:LiPanel styleName="active" ui:field="collectionPanel">
										<g:Anchor>Collection</g:Anchor>
									</panel:LiPanel>
									<panel:LiPanel ui:field="resourcePanel">
										<g:Anchor>Resource</g:Anchor>
									</panel:LiPanel>

								</panel:UlPanel>
							</g:HTMLPanel>
						</g:HTMLPanel>
						<g:HTMLPanel styleName="col-md-6 col-sm-7">

							<g:HTMLPanel styleName="seachRightNavigation">
								<g:InlineLabel styleName="preHeader"> Preference </g:InlineLabel>
								<g:HTMLPanel styleName="btn-group grade">
									<g:Button styleName="btn btn-primary">Grade</g:Button>
									<panel:HTMLEventPanel styleName="btn btn-primary dropdown-toggle" ui:field="gradesDropDown">
										<g:InlineLabel styleName="caret"></g:InlineLabel>
										<g:InlineLabel styleName="sr-only">Toggle Dropdown</g:InlineLabel>
									</panel:HTMLEventPanel>
									<g:HTMLPanel styleName="dropdown-menu" ui:field="gradesPanel"></g:HTMLPanel>
								</g:HTMLPanel>
								
							<g:HTMLPanel styleName="btn-group">
								<g:Button styleName="btn btn-primary">Subjects</g:Button>
								<g:HTMLPanel styleName="btn btn-primary dropdown-toggle" ui:field="subjectDropDown">
									<g:InlineLabel styleName="caret"></g:InlineLabel>
									<g:InlineLabel styleName="sr-only">Toggle Dropdown</g:InlineLabel>
								</g:HTMLPanel>
								<panel:UlPanel ui:field="ulSubjectPanel"/>
							</g:HTMLPanel>
							<g:HTMLPanel styleName="btn-group">
								<g:Button styleName="btn btn-primary">Browse Standers</g:Button>
								<g:HTMLPanel styleName="btn btn-primary dropdown-toggle">
									<g:InlineLabel styleName="glyphicon glyphicon-align-justify"></g:InlineLabel>
									<g:InlineLabel styleName="sr-only">Toggle Dropdown</g:InlineLabel>
								</g:HTMLPanel>
							</g:HTMLPanel>
						</g:HTMLPanel>
						</g:HTMLPanel>
						<g:HTMLPanel styleName="clearfix"></g:HTMLPanel>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</div>
			<!-- collection search filters -->
			<div class="collectionDetails">
				<div class="container">
					<div class="no-gutter">
						<div class="col-md-9 col-sm-10">
							<div class="seachLeftNavigation">
								<ul>
									<li class="active">
										<a class="collectionsIcon" href="">Collections (5220)</a>
									</li>
									<li>
										<a class="assessmentIcon" href="">Assessments (192)</a>
									</li>
								</ul>
								<div class="authorDetails">
									<div class="input-group">
										<span> Author:</span>
										<g:TextBox  styleName="form-control" ui:field="authorTxtBox" />
										<g:Label styleName="searchQuestionMark"></g:Label>
									</div>
								</div>
							</div>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>

			<!-- collection search filters end -->
		</g:HTMLPanel>
		<div class="container">
			<div class="SmallWidthContainer">
				<div>
					<g:InlineLabel styleName="searchResultsBox" ui:field="searchResults"/> 	
					<g:FlowPanel ui:field="pnlAddFilters" styleName="searchFilters"></g:FlowPanel>	
				</div>
				<div class="borderBox">
					<g:HTMLPanel ui:field="searchResultPanel" styleName="less-gutter libraryMainContainerBlock" />
					<g:Label ui:field="lblLoadingText" styleName="loadingText" text="{i18n.GL3206}" title="{i18n.GL3206}"/>
					<div class="clearfix"></div>
				</div>
				<g:HTMLPanel ui:field="pnlBackToTop">
					<a><span></span></a>
				</g:HTMLPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 
