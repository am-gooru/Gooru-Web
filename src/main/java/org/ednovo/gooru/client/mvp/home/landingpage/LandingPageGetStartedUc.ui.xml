<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:panel="urn:import:org.ednovo.gooru.client.ui">
	<ui:style field="landingPageStyle" src="../landing-page.css" />
	<g:HTMLPanel styleName="{landingPageStyle.pageSection} {landingPageStyle.getStarted}">
		<h2><g:Label ui:field="howToStartText"></g:Label></h2>
		<g:Anchor ui:field="backto" href="#" styleName="{landingPageStyle.returnToTop}"></g:Anchor>
		<g:HTMLPanel styleName="{landingPageStyle.contentBlock}">
		   <panel:HTMLEventPanel styleName="{landingPageStyle.getStartedOption} {landingPageStyle.search}" ui:field="discoverLink">
		      <g:HTMLPanel styleName="{landingPageStyle.image}"></g:HTMLPanel>
		      <h3><g:Label ui:field="searchLbl"></g:Label></h3>
		      <g:HTMLPanel styleName="{landingPageStyle.description}" ui:field="searchDescLbl"></g:HTMLPanel>
		   </panel:HTMLEventPanel>
		   <panel:HTMLEventPanel styleName="{landingPageStyle.getStartedOption} {landingPageStyle.create}" ui:field="organizeLink">
		      <g:HTMLPanel styleName="{landingPageStyle.image}"></g:HTMLPanel>
		      <h3><g:Label ui:field="createText"></g:Label></h3>
		      <g:HTMLPanel styleName="{landingPageStyle.description}" ui:field="startCollectionLbl"></g:HTMLPanel>
		   </panel:HTMLEventPanel>
		   <panel:HTMLEventPanel styleName="{landingPageStyle.getStartedOption} {landingPageStyle.signup}" ui:field="signUpLink">
		      <g:HTMLPanel styleName="{landingPageStyle.image}"></g:HTMLPanel>
		      <h3><g:Label ui:field="signUpLbl"></g:Label></h3>
		      <g:HTMLPanel styleName="{landingPageStyle.description}" ui:field="shareLbl"></g:HTMLPanel>
		   </panel:HTMLEventPanel>
		   <g:HTMLPanel styleName="{landingPageStyle.clearfix}"></g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>