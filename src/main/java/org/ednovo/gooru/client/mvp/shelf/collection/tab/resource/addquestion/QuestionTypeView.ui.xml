<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tinyMce="urn:import:org.ednovo.gooru.client.ui">

	<ui:style src="QuestionType.css"
		type="org.ednovo.gooru.client.mvp.shelf.collection.tab.resource.addquestion.QuestionTypeCBundle"
		field="res" />

	<g:HTMLPanel styleName="{res.assessmentContentBlock}">


	<g:HTMLPanel styleName="">
		<g:Label ui:field="questionTypeHeader" styleName="{res.questionTypeHeaderTitle}"/>
		<g:Label ui:field="questionTypeText" styleName="col-md-12 colmdPadding {res.questionTypeTextStyle}"/>
	</g:HTMLPanel>

	<g:HTMLPanel styleName="">
		<g:HTMLPanel styleName="{res.addAnswerHeadTitle}" ui:field="questionText"></g:HTMLPanel>
		<g:Label styleName="{res.charLimit}" ui:field="charLimitLbl"></g:Label>
	</g:HTMLPanel>
	
	<g:HTMLPanel styleName="{res.questionTextContainerBlock} questionTextcontainer">
		<tinyMce:TinyMCE width="1" height="1"
			ui:field="questionNameTextArea" characterLimit="500"></tinyMce:TinyMCE>
		<g:Label ui:field="questionNameErrorLbl"></g:Label>
	</g:HTMLPanel>

	<g:HTMLPanel styleName="">
		<g:Anchor styleName="ancTab" ui:field="addQuestionImg"></g:Anchor>

	</g:HTMLPanel>
	
	<g:HTMLPanel ui:field="addQuestImgContainer"/> 


			<div class="no-gutter marginDivBlock">
				<div class="col-md-10">
					
				</div>
				<div class="col-md-2">
					<div class="rightBlockContainer">
						<!-- <img src="images/add-symbol.png"> -->
						<p>Question Image</p>
					</div>
				</div>
				<div class="clearfix"></div>

			</div>
















			<div class="no-gutter marginDivBlock">
				<div class="col-md-9">
					<div class="questionTextcontainer">

						<label>Answer *</label>
						<p>
							<textarea class="form-control" placeholder="Type answer here..."></textarea>
						</p>
						<div class="errorMessage">Please label the correct answer.</div>


					</div>
				</div>
				<div class="col-md-3">
					<div class="rightBlockContainer AnswerBlock no-gutter">
						<div class="col-md-4 clacImage">
							<!-- <img src="images/calcIcon.png"> -->
						</div>
						<div class="col-md-8 clacOptions">
							<p>
								<input type="radio" name="radio" id="radio" value="radio" />
								<label for="radio">to calculate</label>
							</p>
							<p>
								<input type="radio" name="radio" id="radio" value="radio" />
								<label for="radio">to create
									an equation</label>
							</p>
						</div>

						<div class="clearfix"></div>
					</div>
				</div>
				<div class="clearfix"></div>

			</div>




			<div class="no-gutter marginDivBlock">
				<div class="col-md-12">
					<div class="hints">

						<label class="hintsHeader">Hints (hints will show up in this order)</label>
						<p>
							<label for="textfield">1</label>
							<input type="text" name="textfield" id="textfield" class="form-control" />
						</p>
						<p class="morehints">
							<a href="">+ Hints </a>
						</p>



					</div>
				</div>

				<div class="clearfix"></div>

			</div>







			<div class="no-gutter marginDivBlock">
				<div class="col-md-12">
					<div class="">

						<label>Explanation</label>
						<div class="text-muted">Character Limit: 500</div>
						<p>
							<textarea class="form-control" placeholder="Type question here..."></textarea>
						</p>



					</div>
				</div>

				<div class="clearfix"></div>

			</div>


			<div class="optionsBottom no-gutter">

				<div class="col-md-8">
					<div class="optionsMainContainer">
						<div class="optHeader">More Options</div>

						<div class="active">
							<a href="">+ Hints (5 left)</a>
						</div>
						<div>
							<a href="">+ Depth of Knowledge</a>
						</div>
						<div>
							<a href="">+ Standards</a>
						</div>
						<div class="clearfix"></div>
					</div>

				</div>
				<div class="col-md-4 optionButtonContainer">
					<button class="secondary" type="button">Cancel</button>
					<button class="primary" type="button">Preview</button>
					<button class="primary" type="button">Add</button>

				</div>
				<div class="clearfix"></div>
			</div>

	</g:HTMLPanel>
</ui:UiBinder> 
