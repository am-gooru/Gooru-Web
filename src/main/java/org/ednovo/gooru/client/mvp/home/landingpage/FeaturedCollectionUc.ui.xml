<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:uc="urn:import:org.ednovo.gooru.client.ui">
	<ui:style field="landingPageStyle" src="../landing-page.css"  type="org.ednovo.gooru.client.mvp.home.LandingPageStyleCss"/>
		      <g:HTMLPanel styleName="{landingPageStyle.courseSection}">
		         <g:Label styleName="{landingPageStyle.courseTitle}" ui:field="courseTitle"></g:Label>
		         <g:HTMLPanel styleName="{landingPageStyle.collectionWrapper}">
		            <uc:HTMLEventPanel ui:field="featuredCollectionHoverEvent" styleName="{landingPageStyle.featuredCollectionHoverEvent}">
		            	<g:Image styleName="{landingPageStyle.featuredCollection}" ui:field="featuredCollectionImg"/>
		            </uc:HTMLEventPanel>
		            <g:HTMLPanel styleName="{landingPageStyle.collectionMetadata}">
		            	<g:HTML ui:field="featuredCollectionDescription" styleName="{landingPageStyle.hoverCollectionContainer}"></g:HTML>
		               <g:Label styleName="{landingPageStyle.collectionTitle}" ui:field="collectionTitle"></g:Label>
		               <g:HTMLPanel styleName="{landingPageStyle.collectionAuthor}" ui:field="creatorText"><g:Label ui:field="createdByText"></g:Label><g:Anchor ui:field="collectionAuthor"/></g:HTMLPanel>
		               <g:HTMLPanel styleName="{landingPageStyle.collectionGrades}" ui:field="collectionGrades">
		                  <g:Label ui:field="gradesText"></g:Label><br/>
		                  <g:Label styleName="{landingPageStyle.gradeTag}" ui:field="gradeTag1"></g:Label>
		                  <g:Label styleName="{landingPageStyle.gradeTag}" ui:field="gradeTag2"></g:Label>
		               </g:HTMLPanel>
		               <g:HTMLPanel styleName="{landingPageStyle.collectionStandards}" ui:field="collectionStandards">
		                  <g:Label ui:field="standardsText"></g:Label><br/>
		                  <g:HTMLPanel styleName="{landingPageStyle.standardsTag}" ui:field="standardsTab"></g:HTMLPanel>
		               </g:HTMLPanel>
		            </g:HTMLPanel>
		         </g:HTMLPanel>
		      </g:HTMLPanel>
</ui:UiBinder>