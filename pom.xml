			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo>Displaying value of pom.xml element</echo>
								<echo>[project.artifactId] ${project.artifactId}</echo>
								<echo>-------------------------------------------------------------</echo>
								<echo>[maven.build.timestamp.format]
									${maven.build.timestamp.format}</echo>
								<echo>[timestamp] ${timestamp}</echo>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- GWT Maven Plugin -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>gwt-maven-plugin</artifactId>
				<version>2.7.0</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<!-- Plugin configuration. There are many available options, see gwt-maven-plugin 
					documentation at codehaus.org -->
				<configuration>
					<!-- URL that should be automatically opened in the GWT shell (gwt:run). -->
					<runTarget>index.html</runTarget>
					<!-- Ask GWT to create the Story of Your Compile (SOYC) (gwt:compile) -->
					<compileReport>true</compileReport>
					<module>org.ednovo.gooru.Gooru</module>
					<hostedWebapp>${webappDirectory}</hostedWebapp>
					<logLevel>ERROR</logLevel>
					<style>${gwt.style}</style>
					<!-- <extraJvmArgs>-XX:MaxPermSize=1024m -Xmx4024m</extraJvmArgs> -->
					<extraJvmArgs>-XX:MaxPermSize=1028m -Xmx4096m</extraJvmArgs>
					<!-- <extraJvmArgs>-Xmx896M -Xms2048m -XX:PermSize=64m -XX:MaxPermSize=128m</extraJvmArgs> -->
					<copyWebapp>true</copyWebapp>
				</configuration>
				<dependencies>
					<!-- For the servlet filter -->
					<dependency>
						<groupId>javax.servlet</groupId>
						<artifactId>servlet-api</artifactId>
						<version>2.5</version>
					</dependency>
					<dependency>
						<groupId>com.google.gwt</groupId>
						<artifactId>gwt-dev</artifactId>
						<version>2.7.0</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>com.samaxes.maven</groupId>
				<artifactId>minify-maven-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>minify-css</id>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<charset>utf-8</charset>
							<jsEngine>closure</jsEngine>
							<cssSourceDir>css</cssSourceDir>
							<cssSourceIncludes>
								<cssSourceInclude>*.css</cssSourceInclude>
							</cssSourceIncludes>
							<cssSourceExcludes>
								<cssSourceExclude>*.min.css</cssSourceExclude>
								<cssSourceExclude>embed.css</cssSourceExclude>
								<cssSourceExclude>font-awesome.css</cssSourceExclude>
							</cssSourceExcludes>
							<cssFinalFile>main-styles.css</cssFinalFile>
							<!-- JS Minify -->
							<jsSourceDir>scripts</jsSourceDir>
							<jsSourceIncludes>
								<jsSourceInclude>basicscripts.js</jsSourceInclude>
								<jsSourceInclude>errorImageFunction.js</jsSourceInclude>
								<!-- <jsSourceInclude>highcharts.js</jsSourceInclude> -->
								<jsSourceInclude>heatmap.js</jsSourceInclude>
								<jsSourceInclude>push-menu.js</jsSourceInclude>
							</jsSourceIncludes>
							<jsSourceExcludes>
								<jsSourceExclude>*.min.js</jsSourceExclude>
							</jsSourceExcludes>
							<jsFinalFile>main-script.js</jsFinalFile>
							<warSourceIncludes>*.min.js</warSourceIncludes>
							<warSourceIncludes>*.min.css</warSourceIncludes>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Copy static web files before executing gwt:run -->
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<!-- here the phase you need -->
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/src/main/webapp</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.min.css</include>
					<include>**/*.html</include>
					<include>**/*.min.js</include>
					<include>**/*.</include>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
